generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Farmer {
  id        String   @id @default(uuid())
  mobile    String   @unique
  createdAt DateTime @default(now())

  state     String?
  district  String?
}

model Otp {
  id        String   @id @default(uuid())
  mobile    String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([mobile])
}
